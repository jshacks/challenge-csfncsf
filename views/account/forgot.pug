extends ../layout

block content
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      legend Recuperare parola
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        p Scrie adresa ta de email in casuta de mai jos si vei primi un mesaj cu instructiuni pentru resetarea parolei
        label.control-label(for='email') Email
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Resetare parola
