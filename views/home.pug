extends layout

block hero
    .jumbotron
        .container.pt4.center
            h1.center.h1 Acum ai ce sa faci
            h3.center.h2 Platforma de crowdfunding pentru jurnalism de investigatie
            div.mt4
              a(href='/add-story').btn.black.bg-yellow.center Propune o poveste
block content
    .container.mt4
        h1.center Decide ce idei sunt finantate si ce povesti sunt spuse
        h3.center Propuneri Verificate
    .container
        .row.mt4
            each item in vettedStories
                .col-sm-3
                    .card
                        img.card-img-top.img-responsive(src='//placehold.it/300', alt='Card image cap')
                        .card-block
                            h4.card-title #{item.title}
                            p.card-text
                                | #{item.description}
                                a(href="/story/"+item._id)  Citeste mai mult
                            .progress.mt2
                                .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 100%;')
                                    span.sr-only 100% Complete
                            ul
                                li #{item.funded}
                                li #{item.backers}
                                li $ #{item.fundingTarget}
    .container.mt4
        h1.center Vezi ce povesti au fost sustinute
        h3.center Propuneri Finantate
    .container
        .row.mt4
            each item in financedStories
                .col-sm-3
                    .card
                        img.card-img-top.img-responsive(src='//placehold.it/300', alt='Card image cap')
                        .card-block
                            h4.card-title #{item.title}
                            p.card-text
                                | #{item.description}
                                a(href="/story/"+item._id) Citeste mai mult
                            .progress.mt2
                                .progress-bar(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%;')
                                    span.sr-only 100% Complete
                            .row.mt2
                              .col-sm-4.center
                                p #{item.funded}
                                p.h6.gray RAISED
                              .col-sm-4.center
                                p #{item.backers}
                                p.h6.gray BACKERS
                              .col-sm-4
                                p >$ #{item.fundingTarget}
                                p.h6.gray THRESHOLD
    .container.mt4
        h1.center Ajuta la verificarea noilor propuneri
        h3.center Propuneri Noi
    .container
        .row.mt4
            each item in newStories
                .col-sm-3
                    .card
                        img.card-img-top.img-responsive(src='//placehold.it/300', alt='Card image cap')
                        .card-block
                            h4.card-title #{item.title}
                            p.card-text
                                | #{item.description}
                                a(href="/story/"+item._id)  Citeste mai mult
